<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.webank.weevent.governance.mapper.TopicInfoMapper">

    <resultMap id="BaseResultMap" type="com.webank.weevent.governance.entity.TopicEntity">
        <result column="id" property="id" jdbcType="INTEGER"/>
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP"/>
        <result column="last_update" property="lastUpdate" jdbcType="TIMESTAMP"/>
        <result column="is_delete" property="isDelete" jdbcType="INTEGER"/>
        <result column="topic_name" property="topicName" jdbcType="VARCHAR"/>
        <result column="creater" property="creater" jdbcType="VARCHAR"/>
        <result column="broker_id" property="brokerId" jdbcType="INTEGER"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
       id,create_date, last_update, is_delete , topic_name, creater, broker_id,description
    </sql>

    <select id="getTopic" resultMap="BaseResultMap"
            parameterType="java.lang.Long">
        select
        <include refid="Base_Column_List"/>
        from t_topic where id=#{id} and is_delete=0
    </select>


    <select id="getCreater" resultType="java.lang.String">
        select creater
        from t_topic where is_delete=0
        <if test="topicName != null and topicName !=''">
            AND topic_name = #{topicName}
        </if>
        <if test="brokerId != null">
            AND broker_id = #{brokerId}
        </if>
    </select>

    <insert id="openBrokeTopic" parameterType="com.webank.weevent.governance.entity.TopicEntity">
            insert into t_topic(broker_id,
            topic_name,
            creater,
            description)
            values(
            #{topicEntity.brokerId},
            #{topicEntity.topicName},
            #{topicEntity.creater},
            #{topicEntity.description}
            )
    </insert>

    <delete id="deleteTopicInfo" parameterType="java.lang.Integer">
	   update t_topic set is_delete=1
       where id=#{id}
	</delete>

    <delete id="deleteByBrokerId" parameterType="java.lang.Integer">
	   update t_topic set is_delete=1
       where broker_id=#{brokerId}
	</delete>

</mapper>