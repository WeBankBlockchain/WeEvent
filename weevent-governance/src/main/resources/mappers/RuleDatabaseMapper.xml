<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.webank.weevent.governance.mapper.RuleDatabaseMapper">


    <resultMap id="BaseResultMap" type="com.webank.weevent.governance.entity.RuleDatabaseEntity">
        <result column="id" property="id" jdbcType="INTEGER"/>
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP"/>
        <result column="last_update" property="lastUpdate" jdbcType="TIMESTAMP"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="broker_id" property="brokerId" jdbcType="INTEGER"/>
        <result column="ip" property="ip" jdbcType="VARCHAR"/>
        <result column="port" property="port" jdbcType="VARCHAR"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="database_name" property="databaseName" jdbcType="VARCHAR"/>
        <result column="optional_parameter" property="optionalParameter" jdbcType="VARCHAR"/>
        <result column="datasource_name" property="datasourceName" jdbcType="VARCHAR"/>
        <result column="table_name" property="tableName" jdbcType="VARCHAR"/>
        <result column="system_tag" property="systemTag" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,create_date,last_update,user_id,broker_id,datasource_name,ip,port,username,
        password,database_name,optional_parameter,table_name,database_name,system_tag
    </sql>

    <select id="getRuleDataBaseList" resultMap="BaseResultMap"
            parameterType="com.webank.weevent.governance.entity.RuleDatabaseEntity">
        select
        <include refid="Base_Column_List"/>
        from t_rule_database
        where 1=1
        <if test="id != null">
            and id = #{id,jdbcType=INTEGER}
        </if>
        <if test="userId != null">
            and user_id = #{userId,jdbcType=INTEGER}
        </if>
        <if test="createDate != null">
            and create_date = #{createDate,jdbcType=TIMESTAMP}
        </if>
        <if test="lastUpdate != null">
            and last_update = #{astUpdate,jdbcType=TIMESTAMP}
        </if>
        <if test="brokerId != null">
            and broker_id = #{brokerId,jdbcType=INTEGER}
        </if>
        <if test="systemTag != null">
            and system_tag = #{systemTag,jdbcType=VARCHAR}
        </if>
    </select>

    <select id="getRuleDataBaseById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_rule_database
        where id=#{id}
    </select>

    <delete id="deleteRuleDatabase"
            parameterType="com.webank.weevent.governance.entity.RuleDatabaseEntity">
        delete
        from t_rule_database
        where id = #{id}
    </delete>

    <update id="updateRuleDatabase"
            parameterType="com.webank.weevent.governance.entity.RuleDatabaseEntity">
        update t_rule_database
        set
            datasource_name=#{datasourceName},
            ip=#{ip},
            port=#{port},
            database_name=#{databaseName},
            username=#{username},
            password=#{password},
            optional_parameter=#{optionalParameter},
            table_name=#{tableName}
        where id = #{id,jdbcType=INTEGER}
    </update>


    <insert id="addRuleDatabase" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_rule_database(`user_id`, `broker_id`,  `database_name`, `table_name`,`system_tag`,
        `datasource_name`, `ip`,  `port`, `username`,`password`, `optional_parameter`)
        VALUES (#{userId}, #{brokerId}, #{databaseName}, #{tableName},#{systemTag},
        #{datasourceName}, #{ip}, #{port}, #{username},#{password},#{optionalParameter})
    </insert>

    <select id="countRuleDatabase" resultType="int">
        select count(*) from t_rule_database
        where 1=1
        <if test="id != null">
            and id = #{id,jdbcType=INTEGER}
        </if>
        <if test="userId != null">
            and user_id = #{userId,jdbcType=INTEGER}
        </if>
        <if test="createDate != null">
            and create_date = #{createDate,jdbcType=TIMESTAMP}
        </if>
        <if test="lastUpdate != null">
            and last_update = #{astUpdate,jdbcType=TIMESTAMP}
        </if>
        <if test="brokerId != null">
            and broker_id = #{brokerId,jdbcType=INTEGER}
        </if>
        <if test="systemTag != null">
            and system_tag = #{systemTag,jdbcType=VARCHAR}
        </if>
    </select>
</mapper>